<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
		<HighDpiMode>PerMonitorV2</HighDpiMode>
		<UseWindowsForms>true</UseWindowsForms>
		<ApplicationIcon>Logo.ico</ApplicationIcon>

	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="LibNMeCab" Version="0.10.2" />
		<PackageReference Include="Microsoft.Data.Sqlite" Version="8.0.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
		<PackageReference Include="System.Drawing.Common" Version="10.0.0" />
	</ItemGroup>

	<ItemGroup>
		<!-- This ensures your dictionary files are copied to the exe folder -->
		<None Update="dic\**\*">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<!-- This ensures jitendex.zip is copied if present -->
		<None Update="jitendex.zip">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>